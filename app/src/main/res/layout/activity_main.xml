<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2CFFD740"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
               android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="KNU EVERYTHING"
                android:textColor="#FF0000"
                android:textSize="15dp"
                android:textStyle="bold">
            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/main_people"
                android:adjustViewBounds="true">

            </ImageView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp">
                    <ImageButton
                        android:id="@+id/IB1"
                        android:background="#ffffff"
                        android:maxHeight="80dp"
                        android:maxWidth="80dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/menu_play"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="35dp"
                        android:scaleType="fitCenter">
                    </ImageButton>

                    <ImageButton
                        android:id="@+id/IB2"
                        android:background="#ffffff"
                        android:maxHeight="80dp"
                        android:maxWidth="80dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/menu_restaurant"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="30dp"
                        android:scaleType="fitCenter">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/IB3"
                        android:background="#ffffff"
                        android:maxHeight="90dp"
                        android:maxWidth="90dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/menu_datecourse"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="30dp"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="3dp"
                        >
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/IB4"
                        android:background="#ffffff"
                        android:maxHeight="80dp"
                        android:maxWidth="80dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/menu_cafe"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="30dp"
                        android:scaleType="fitCenter">
                    </ImageButton>

                </LinearLayout>


            <ImageButton
                android:id="@+id/random"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:background="#ffEE11"
                android:maxWidth="200dp"
                android:maxHeight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/what">

            </ImageButton>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="25dp"
                android:paddingBottom="15dp"
                android:text="이번 계절 Best 5 포토존"
                android:textColor="#FFB300"
                android:textStyle="bold">

            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pzone1"></ImageView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pzone2"></ImageView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pzone3"></ImageView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pzone4"></ImageView>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/TV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="25dp"
                android:paddingBottom="15dp"
                android:text="로그인 정보"
                android:textColor="#FFB300"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ET1"
                android:hint="로그인 정보 없음"
                android:paddingLeft="15dp"
                android:paddingTop="25dp"
                android:paddingBottom="15dp">

            </EditText>
        </LinearLayout>



    </ScrollView>
</LinearLayout>