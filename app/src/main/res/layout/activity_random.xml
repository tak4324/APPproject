<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   선택장애를 위한 공간입니다"
        android:textSize="30dp"
        android:textColor="#ff0000"
        android:layout_marginTop="10dp">
    </TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="@drawable/today_eat1">
        <TextView
            android:id="@+id/hungry"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="MENU"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/stew_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=" 찌개 "
            android:textSize="30sp"
            android:gravity="center"
            android:background="#FFFFEFD5"
            android:layout_above="@id/hungry"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/rice_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=" 밥 "
            android:textSize="30sp"
            android:gravity="center"
            android:background="#FFFFEFD5"
            android:layout_below="@id/hungry"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/meat_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@id/rice_button"
            android:layout_toRightOf="@+id/rice_button"
            android:layout_marginLeft="15dp"
            android:background="#FFFFEFD5"
            android:gravity="center"
            android:text="  고기  "
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:id="@+id/delivery_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@id/rice_button"
            android:layout_toLeftOf="@+id/rice_button"
            android:layout_marginRight="15dp"
            android:background="#FFFFEFD5"
            android:gravity="center"
            android:text="배달"
            android:textSize="30sp"
            android:onClick="onClick" />
        <Button
            android:id="@+id/noodle_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@id/hungry"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/hungry"
            android:background="#FFFFEFD5"
            android:text="국수"
            android:textSize="30sp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/school_food_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@id/stew_button"
            android:layout_toRightOf="@+id/stew_button"
            android:layout_marginLeft="15dp"
            android:background="#FFFFEFD5"
            android:gravity="center"
            android:text="분식"
            android:textSize="30sp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/seafood_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@id/stew_button"
            android:layout_toLeftOf="@+id/stew_button"
            android:layout_marginRight="15dp"
            android:background="#FFFFEFD5"
            android:gravity="center"
            android:text=" 해물 "
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:id="@+id/pasta_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@id/hungry"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/hungry"
            android:background="#FFFFEFD5"
            android:text="파스타"
            android:textSize="30sp"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/select_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rice_button"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:text="선택장애가 아니면 닫기를 눌러주세요."
            android:textSize="15dp"></TextView>

        <Button
            android:id="@+id/select_cancel_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_alignBaseline="@id/select_text"
            android:layout_toRightOf="@+id/select_text"
            android:text="닫기">
        </Button>


    </RelativeLayout>




</LinearLayout>
